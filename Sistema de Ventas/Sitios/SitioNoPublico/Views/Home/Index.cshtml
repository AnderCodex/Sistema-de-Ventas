@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="jumbotron bg-light p-5 rounded-lg shadow">
        <h1 class="display-4">Bienvenido al Sistema</h1>
        <p class="lead">Accede al sistema para gestionar tus tareas.</p>
        <hr class="my-4">
        <div id="reloj" class="mb-4">
            <h2 class="display-5" id="hora"></h2>
            <h3 class="display-6" id="fecha"></h3>
        </div>
        <div>
            @Html.ActionLink("Iniciar Sesión", "FormLogueo", "Usuario", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@section Scripts {
    <script>
        function actualizarReloj() {
            const ahora = new Date();
            const opcionesHora = { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false };
            const opcionesFecha = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };

            document.getElementById('hora').textContent = ahora.toLocaleTimeString('es-ES', opcionesHora);
            document.getElementById('fecha').textContent = ahora.toLocaleDateString('es-ES', opcionesFecha);
        }


        setInterval(actualizarReloj, 1000);
        actualizarReloj();
    </script>
}