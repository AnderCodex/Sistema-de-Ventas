@model EC.Clientes

@{
    ViewBag.Title = "FormModificarCliente";
    Layout = "~/Views/Shared/_Layaut2.cshtml";
}

<h2>Modificar Cliente</h2>

@ViewBag.Mensaje    

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
